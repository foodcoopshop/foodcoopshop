<?xml version="1.0"?>
<ruleset name="FoodCoopShop Coding Standard">
 <description>The FoodCoopShop coding standard</description>
 <arg name="encoding" value="utf-8"/>
 <arg value="n"/>
 <arg name="bootstrap" value="git-hooks-phpcs-filefilter.inc.php"/>
 <rule ref="PSR2">
  <exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
 </rule>
 <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
  <properties>
   <property name="ignoreBlankLines" value="false"/>
  </properties>
</rule>
</ruleset>
