{
    "name": "foodcoopshop/foodcoopshop",
    "description": "The open source software for your foodcoop",
    "homepage": "https://www.foodcoopshop.com",
    "license": "MIT",
    "authors": [
        {
            "name": "FoodCoopShop Community",
            "homepage": "https://github.com/foodcoopshop/foodcoopshop/graphs/contributors"
        }
    ],
    "require": {
        "php": ">7.0.0",
        "cakephp/cakephp": "2.10.*",
        "intervention/image": "2.*",
        "tecnickcom/tcpdf": "6.2.*",
        "simpletest/simpletest": "1.1.7",
        "markstory/asset_compress" : "2.x-dev",
        "tedivm/jshrink" : "1.2.0",
        "natxet/CssMin": "3.0.4",
        "sunhater/kcfinder": "dev-master#3.12"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*",
        "squizlabs/php_codesniffer": "2.*"
    },
    "config": {
        "vendor-dir": "Vendor/"
    },
    "extra": {
        "installer-paths": {
            "Plugin/AssetCompress": ["markstory/asset_compress"]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "bash devtools/setup-git.sh && bash devtools/install-kcfinder.sh"
        ],
        "post-update-cmd": [
            "bash devtools/setup-git.sh && bash devtools/install-kcfinder.sh"
        ]
    }
}
